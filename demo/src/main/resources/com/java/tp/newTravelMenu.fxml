<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.ListView?>
<?import javafx.geometry.Insets?>
<?import java.net.URL?>

<StackPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.java.tp.guiControllers.NewTravelController">
    <VBox alignment="CENTER" spacing="15.0" style="-fx-background-color: white; -fx-padding: 30; -fx-background-radius: 10;" prefWidth="650.0"> 
        <children>
            <Label text="Crear Nuevo Viaje" styleClass="titulo-principal"/>

            <Label text="Seleccione el destino:"/>
            <ComboBox fx:id="destinoComboBox" promptText="Elegir Destino" maxWidth="Infinity"/>

            <Label text="Vehículo Sugerido:"/>
            <ComboBox fx:id="vehiculoComboBox" promptText="Elegir Vehículo" maxWidth="Infinity"/> 

            <Label fx:id="responsablesSectionLabel" text="Responsables (Sólo Larga distancia):"/>
            <HBox fx:id="responsablesHBox" alignment="CENTER" spacing="10.0" maxWidth="Infinity">
                <children>
                    <VBox alignment="TOP_CENTER" spacing="5.0" HBox.hgrow="ALWAYS">
                        <Label text="Disponibles:"/>
                        <ListView fx:id="responsablesDisponiblesListView" prefHeight="150.0" prefWidth="250.0" styleClass="list-view"/>
                    </VBox>

                    <VBox alignment="CENTER" spacing="10.0">
                        <Button fx:id="agregarResponsableButton" text="&gt; Agregar &gt;" onAction="#agregarResponsable" styleClass="reportsButtons" minWidth="100.0"/>
                        <Button fx:id="quitarResponsableButton" text="&lt; Quitar &lt;" onAction="#quitarResponsable" styleClass="reportsButtons" minWidth="100.0"/>
                    </VBox>

                    <VBox alignment="TOP_CENTER" spacing="5.0" HBox.hgrow="ALWAYS">
                        <Label text="Seleccionados:"/>
                        <ListView fx:id="responsablesSeleccionadosListView" prefHeight="150.0" prefWidth="250.0" styleClass="list-view"/>
                    </VBox>
                </children>
            </HBox>
            
            <Label text="Cantidad de Pasajeros:"/>
            <Spinner fx:id="pasajerosSpinner" maxWidth="Infinity"/>

            <Label text="Kilómetros Realizados:"/>
            <Spinner fx:id="kmHechosSpinner" maxWidth="Infinity"/>

            <HBox alignment="CENTER" spacing="10.0">
                <Label text="Costo del Viaje: " />
                <Label fx:id="totalValue" style="-fx-text-fill: green; -fx-font-weight: bold; -fx-font-size: 14px;"/>
            </HBox>
            <Button text="Crear Viaje" onAction="#crearViaje" maxWidth="Infinity"/>
            <Button fx:id="MainMenuButton" text="Volver" onAction="#switchToMainMenu" maxWidth="Infinity"/>
        </children>
        <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
        </padding>
    </VBox>
</StackPane>