<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.java.tp.guiControllers.TopPlacesController">
   <children>
      <Label styleClass="titulo-principal" text="Reporte de Destinos" />
      <ListView fx:id="list" />
      <HBox alignment="CENTER" spacing="10.0">
         <Label text="Total Recaudado: " />
         <Label fx:id="totalPlaces" style="-fx-text-fill: green; -fx-font-weight: bold; -fx-font-size: 14px;"/>
      </HBox>
      <HBox alignment="CENTER" spacing="10.0">
         <Button fx:id="GenerateReportButton" text="Generar Reporte" onAction="#generateReport"/>
         <Button fx:id="MainMenuButton" text="Volver" onAction="#switchToMainMenu"/>
      </HBox>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
